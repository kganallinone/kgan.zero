{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "NodeNext", // Changed from Node10
    "module": "ESNext", // Changed from CommonJS
    "declaration": true,
    "emitDeclarationOnly": false, // Changed to allow JS emission
    "outDir": "dist",
    "isolatedModules": true, // Recommended for tsup/Vite
    "skipLibCheck": true, // Added for better compatibility
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src", // Explicit source root
    "composite": true // Better for incremental builds
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
